<!doctype html>
<html>
  <head>
    <title>Register for <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Register for <%= shopData.shopName %></h1>
    
    <!-- Ensure the form action points to the correct URL -->
    <form method="POST" action="/users/register">
        <p>First name: <input id="first" type="text" name="first_name" required /></p>
        <p>Last name: <input id="last" type="text" name="last_name" required /></p>
        <p>Email: <input id="email" type="email" name="email" required /></p>
        <p>Username: <input id="username" type="text" name="username" required /></p>
        <p>Password: <input id="password" type="password" name="password" required /></p>
        <input type="submit" value="Register" />
    </form>
  </body>
</html>
